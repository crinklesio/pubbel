{
  "include": ["src"],
  "compilerOptions": {
    "lib": ["ES2019", "DOM"],
    "module": "es2020",
    "target": "ES2019",
    "outDir": "dist/esm",
    "rootDir": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "strictNullChecks": true,
    "allowJs": true,
    
    "removeComments": true
  }
}