{
  "include": ["src"],
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "target": "es6",
    "outDir": "./lib",
    "rootDir": "./src",
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "removeComments": true
  }
}