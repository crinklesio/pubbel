{
  "name": "chifferobe",
  "version": "0.3.0",
  "description": "lightweight dependency free event-driven proxy state",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest",
    "build": "yarn run clean && tsc && esbuild src/index.ts --bundle --minify --outdir=dist",
    "clean": "rm -rf lib dist es tsconfig.tsbuildinfo",
    "test:watch": "npm test -- --watchAll --coverage",
    "prepublish": "npm run build",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json|ts|tsx)\"",
    "format": "npm run prettier -- --list-different",
    "lint": "eslint --ignore-path .gitignore .",
    "validate": "npm-run-all --parallel format lint test build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevtiq/chifferobe.git"
  },
  "keywords": [
    "store",
    "state",
    "event"
  ],
  "author": "Kevin Pennekamp <github@crinkles.dev>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kevtiq/chifferobe/issues"
  },
  "homepage": "https://github.com/kevtiq/chifferobe#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "esbuild": "^0.19.2",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-security": "^1.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "typescript": "^4.5.4",
    "vitest": "^0.34.4"
  },
  "dependencies": {}
}
