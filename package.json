{
  "name": "pubbel",
  "version": "1.0.0",
  "description": "lightweight dependency free JavaScript pub/sub",
  "main": "dist/pubbel.js",
  "module": "pubbel.js",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "npm test -- --watch --coverage",
    "build": "babel pubbel.js -d dist && npm run minify",
    "prepublish": "npm  run build",
    "minify": "terser dist/pubbel.js -o dist/pubbel.min.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevtiq/pubbel.git"
  },
  "keywords": [
    "pub sub",
    "message bus"
  ],
  "author": "Kevin Pennekamp <github@kevtiq.co>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kevtiq/pubbel/issues"
  },
  "homepage": "https://github.com/kevtiq/pubbel#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.6.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "jest-watch-typeahead": "^0.4.0",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "terser": "^4.4.0"
  }
}
